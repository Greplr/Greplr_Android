<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:orientation="vertical">

    <!-- Toolbar space -->

    <com.greplr.common.ui.MaterialEditText
        android:id="@+id/greplr_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What are you seeking? "
        android:imeOptions="actionSearch"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="14sp"
        app:met_baseColor="@android:color/white"
        app:met_errorColor="@color/edittext_error_color_primary"
        app:met_floatingLabel="normal"
        app:met_floatingLabelAnimating="true"
        app:met_floatingLabelText="Search"
        app:met_floatingLabelTextColor="@android:color/white"
        app:met_primaryColor="@android:color/white"
        app:met_underlineColor="@android:color/darker_gray" />

</LinearLayout>