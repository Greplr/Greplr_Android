<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp">

    <!-- Toolbar space -->

        <com.greplr.common.ui.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionSearch"
            android:id="@+id/greplr_search"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:hint="What are you seeking? "
            android:textColorHint="@android:color/white"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="Search"
            app:met_baseColor="@android:color/white"
            app:met_primaryColor="@android:color/white"
            app:met_errorColor="@color/edittext_error_color_primary"
            app:met_underlineColor="@android:color/darker_gray"
            app:met_floatingLabelTextColor="@android:color/white"
            app:met_floatingLabelAnimating="true"/>

</LinearLayout>