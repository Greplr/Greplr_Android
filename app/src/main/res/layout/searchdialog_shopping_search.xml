<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/shopping_search_card_dialog"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="300dp"
        card_view:cardBackgroundColor="@color/shopping_color_dark"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        card_view:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <com.greplr.common.ui.MaterialEditText
                    android:layout_margin="8dp"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:imeOptions="actionSearch"
                    android:id="@+id/et_product_name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:hint="Search"
                    android:textColorHint="@android:color/white"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelText="Search the product"
                    app:met_baseColor="@android:color/white"
                    app:met_primaryColor="@android:color/white"
                    app:met_errorColor="@color/edittext_error_color_primary"
                    app:met_underlineColor="@android:color/white"
                    app:met_floatingLabelTextColor="@android:color/white"
                    app:met_floatingLabelAnimating="true"/>


            <android.support.v7.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="@color/shopping_color_dark"
                android:id="@+id/ok_button"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>