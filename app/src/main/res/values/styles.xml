<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="Greplr.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/greplr_primary</item>
        <item name="colorPrimaryDark">@color/greplr_primary_dark</item>
        <item name="colorAccent">@color/greplr_accent</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>

    <style name="Greplr" parent="Greplr.Base"></style>

    <style name="Greplr.Base.Login" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/greplr_primary_login</item>
        <item name="colorPrimaryDark">@color/greplr_primary_dark_login</item>
        <item name="colorAccent">@color/greplr_accent_login</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AppTheme.LightCards">
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/AppTheme.DarkCards.TextViewStyle</item>
    </style>

    <style name="AppTheme.DarkCards">
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/AppTheme.LightCards.TextViewStyle</item>
    </style>

    <style name="AppTheme.DarkCards.TextViewStyle" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColorTertiary">@android:color/black</item>

    </style>

    <style name="AppTheme.LightCards.TextViewStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorTertiary">@android:color/white</item>
    </style>

    <style name="AppTheme.SearchDialog" parent="Base.Theme.AppCompat.Dialog">

    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Background for the search query section (e.g. EditText) -->
        <item name="queryBackground">@color/textview_dark</item>
        <!-- Background for the actions section (e.g. voice, submit) -->
        <item name="submitBackground">@color/greplr_accent</item>
        <!-- Search button icon -->
        <item name="searchIcon">@drawable/abc_ic_search_api_mtrl_alpha</item>
        <!-- Go/commit button icon -->
        <item name="goIcon">@drawable/abc_ic_go_search_api_mtrl_alpha</item>
        <!-- Voice search button icon -->
        <item name="voiceIcon">@drawable/abc_ic_voice_search_api_mtrl_alpha</item>
        <!-- Commit icon shown in the query suggestion row -->
        <item name="commitIcon">@drawable/abc_ic_commit_search_api_mtrl_alpha</item>
    </style>

</resources>
