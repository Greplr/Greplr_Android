<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <solid android:color="@android:color/background_light" />
            <stroke android:width="2dp" android:color="@color/travel_color_primary" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/greplr_accent" />
            <stroke android:width="1dp" android:color="@color/travel_color_primary" />
            <corners android:radius="3dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/background_light" />
            <stroke android:width="1dp" android:color="@color/travel_color_dark" />
            <corners android:radius="3dp" />
        </shape>
    </item>

</selector>
