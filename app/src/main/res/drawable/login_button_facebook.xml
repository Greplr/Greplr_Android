<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_pressed="true" >
                <shape>
                    <solid
                        android:color="#aa3e62ba" />
                    <corners
                        android:radius="3dp" />

                </shape>
            </item>
            <item>
                <shape>
                    <solid
                        android:color="#3b5998" />
                    <corners
                        android:radius="3dp" />

                </shape>
            </item>
        </selector>
    </item>
    <item
        android:top="5dp" android:left="10dp" android:bottom="3dp">
        <bitmap
            android:src="@drawable/login_facebook"
            android:gravity="left" />
    </item>
</layer-list>
